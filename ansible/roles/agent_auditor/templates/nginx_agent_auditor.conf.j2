map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    listen 80;
    # Handle both domain name and direct IP access
    server_name aegong.knirv.com {{ inventory_hostname }};

    # Route for ACME challenge verification for Let's Encrypt
    # This allows Certbot to prove control over the domain.
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }

    # If SSL is not yet configured, serve the application on HTTP
    {% if ssl_cert_exists.stat.exists %}
    # Redirect all other HTTP traffic to HTTPS when SSL is configured
    location / {
        return 301 https://$host$request_uri;
    }
    {% else %}
    location / {
        proxy_pass http://127.0.0.1:{{ app_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto http;
        proxy_cache_bypass $http_upgrade;
        
        # Timeout settings to prevent 522 errors
        proxy_connect_timeout 60s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;
        
        # Buffer settings for larger responses
        proxy_buffer_size 16k;
        proxy_buffers 8 16k;
        proxy_busy_buffers_size 32k;
        
        # Large file uploads for agent binaries
        client_max_body_size 100M;
    }
    {% endif %}
}

{% if ssl_cert_exists.stat.exists or using_self_signed | default(false) %}
server {
    listen 443 ssl http2;
    # Handle both domain name and direct IP access
    server_name aegong.knirv.com {{ inventory_hostname }};

    {% if ssl_cert_exists.stat.exists %}
    # SSL Certificate settings from Let's Encrypt
    ssl_certificate /etc/letsencrypt/live/aegong.knirv.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/aegong.knirv.com/privkey.pem;

    # The following two files are generated by Certbot and contain security best practices.
    {% if options_ssl_exists.stat.exists %}
    include /etc/letsencrypt/options-ssl-nginx.conf;
    {% endif %}
    {% if dhparams_exists.stat.exists %}
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    {% endif %}
    {% else %}
    # Self-signed certificate (fallback)
    ssl_certificate /etc/ssl/certs/nginx-selfsigned.crt;
    ssl_certificate_key /etc/ssl/private/nginx-selfsigned.key;
    ssl_dhparam /etc/ssl/certs/dhparam.pem;
    
    # SSL settings for self-signed certificate
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;
    {% endif %}

    access_log /var/log/nginx/agent-auditor-access.log;
    error_log /var/log/nginx/agent-auditor-error.log;

    location / {
        proxy_pass http://127.0.0.1:{{ app_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_cache_bypass $http_upgrade;
        
        # Timeout settings to prevent 522 errors
        proxy_connect_timeout 60s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;
        
        # Buffer settings for larger responses
        proxy_buffer_size 16k;
        proxy_buffers 8 16k;
        proxy_busy_buffers_size 32k;
    }

    # Large file uploads for agent binaries
    client_max_body_size 100M;
    
    # Global timeout settings
    keepalive_timeout 65;
    send_timeout 120s;
}
{% endif %}

