map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    listen 80;
    server_name {% if use_domain_for_ssl and domain_name is defined %}{{ domain_name }}{% else %}{{ inventory_hostname }}{% endif %};

    # Route for ACME challenge verification for Let's Encrypt
    # This allows Certbot to prove control over the domain.
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }

    # If SSL is not yet configured, serve the application on HTTP
    {% if ssl_cert_exists.stat.exists %}
    # Redirect all other HTTP traffic to HTTPS when SSL is configured
    location / {
        return 301 https://$host$request_uri;
    }
    {% else %}
    location / {
        proxy_pass http://127.0.0.1:{{ app_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto http;
        proxy_cache_bypass $http_upgrade;
    }
    {% endif %}
}

{% if ssl_cert_exists.stat.exists %}
server {
    listen 443 ssl http2;
    server_name {% if use_domain_for_ssl and domain_name is defined %}{{ domain_name }}{% else %}{{ inventory_hostname }}{% endif %};

    # SSL Certificate settings from Let's Encrypt
    ssl_certificate /etc/letsencrypt/live/{% if use_domain_for_ssl and domain_name is defined %}{{ domain_name }}{% else %}{{ inventory_hostname }}{% endif %}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{% if use_domain_for_ssl and domain_name is defined %}{{ domain_name }}{% else %}{{ inventory_hostname }}{% endif %}/privkey.pem;

    # The following two files are generated by Certbot and contain security best practices.
    {% if options_ssl_exists.stat.exists %}
    include /etc/letsencrypt/options-ssl-nginx.conf;
    {% endif %}
    {% if dhparams_exists.stat.exists %}
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    {% endif %}

    access_log /var/log/nginx/agent-auditor-access.log;
    error_log /var/log/nginx/agent-auditor-error.log;

    location / {
        proxy_pass http://127.0.0.1:{{ app_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_cache_bypass $http_upgrade;
    }

    # Large file uploads for agent binaries
    client_max_body_size 100M;
}
{% endif %}